{
  "defaultRevealDuration": 60,
  "dataDirectory": "./data",
  "imageSources": {
    "unsplash": {
      "enabled": true,
      "baseUrl": "https://api.unsplash.com"
    },
    "pexels": {
      "enabled": false,
      "baseUrl": "https://api.pexels.com/v1"
    },
    "pixabay": {
      "enabled": false,
      "baseUrl": "https://pixabay.com/api"
    }
  },
  "codeGeneration": {
    "length": 8,
    "separator": "-",
    "separatorPosition": 4
  },
  "display": {
    "dateFormat": "YYYY-MM-DD HH:mm:ss",
    "colors": {
      "active": "blue",
      "ready": "yellow",
      "revealed": "green"
    }
  }
}
